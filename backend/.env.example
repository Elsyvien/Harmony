NODE_ENV=development
PORT=4000
DATABASE_URL=file:./dev.db
JWT_SECRET=change_this_to_a_long_random_secret_of_at_least_32_chars
JWT_EXPIRES_IN=15m
CLIENT_ORIGIN=http://localhost:5173
BCRYPT_SALT_ROUNDS=12
MESSAGE_MAX_LENGTH=2000
RATE_LIMIT_MAX=120
RATE_LIMIT_WINDOW_MS=60000
RTC_STUN_URL=stun:stun.l.google.com:19302
# Multiple TURN transports are supported (comma-separated):
# TURN_URLS=turn:your-domain:3478?transport=udp,turn:your-domain:3478?transport=tcp,turns:your-domain:443?transport=tcp
TURN_URLS=
# Static TURN credentials (optional; ignored when TURN_SHARED_SECRET is set)
TURN_USERNAME=
TURN_CREDENTIAL=
# coturn REST auth shared secret for short-lived credentials (recommended)
TURN_SHARED_SECRET=
# Lifetime for generated TURN credentials in seconds
TURN_CREDENTIAL_TTL_SECONDS=3600
# Force relay-only candidates (recommended in production once TURN is configured)
RTC_FORCE_RELAY=false
# Public fallback TURN is now only used outside production when no TURN is configured
RTC_ENABLE_PUBLIC_FALLBACK_TURN=true
